{
  "manifest_version": 3,
  "name": "Leveler",
  "version": "0.2.0",
  "description": "Understand technical terms instantly with context-aware definitions",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle",
      "match_origin_as_fallback": true,
      "all_frames": true
    }
  ]
}
